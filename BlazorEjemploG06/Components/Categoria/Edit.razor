@page "/categoria/edit/{pId:int}"
@using BlazorEjemploG06.Modelos.DTO.CategoriaDTO;
@using System.Text.Json;
@inject HttpClient http
@inject NavigationManager NavManager

<h3>Modificar Categoria</h3>

<input type="hidden" id="idRol" @bind-value="ctgModificar.id" />
<div class="row">
    <div class="col-sm-12">
        <label class="form-label">Nombre</label>
        <input type="text" class="form-control" id="idNombre" @bind-value="ctgModificar.Nombre" />
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <button class="btn btn-primary" @onclick="ModificarCategoria">Guardar</button>
        <button class="btn btn-secondary" @onclick="Index">Regresar</button>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <span style="color:red; font-weight:bold">@error</span>
    </div>
</div>

@code {
    CategoriaModificar ctgModificar = new CategoriaModificar();
    string error = "";

    [Parameter]
    public int pId { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (pId != 0)
            ctgModificar = await http.GetFromJsonAsync<CategoriaModificar>("categoria/" + pId);
        else
            error = "categoria seleccionada no es valida";
    }

    public async Task ModificarCategoria()
    {
        try
        {
            var resultado = await http.PutAsJsonAsync<CategoriaModificar>("categoria/" + pId, ctgModificar);

            if (Convert.ToInt32(resultado.StatusCode) == 200)
            {
                Index();
            }
            else
            {
                error = "ocurrio un error al modicar la categoria"; 
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;    
        }
    }

    void Index()
    {
        NavManager.NavigateTo("/categoria/index");
    }
}
